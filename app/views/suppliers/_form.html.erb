 <%= form_for(@supplier) do |form| %>
  <% if supplier.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul>
        <% supplier.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
   <div style="margin-left: 20px">
     <div class="mb-4">
       <label for="supplier_name" class="aria-label text-1xl tracking-tighter font-extrabold text-slate-900 dark:text-slate-100" style="display: block">Name</label>
       <input type="text" id="supplier_name" name="supplier[name]" value="<%= @supplier.name %>" class="form-input aria-label" style="color: white;width: 250px">
     </div>

     <div>
       <label for="supplier_cnpj" class="aria-label text-1xl tracking-tighter font-extrabold text-slate-900 dark:text-slate-100" style="display: block">CNPJ</label>
       <input type="text" id="supplier_cnpj" name="supplier[cnpj]" value="<%= @supplier.cnpj %>" class="form-input aria-label" style="color: white;width: 250px">
     </div>

     <div class="pt-3">
       <input type="submit" value="Submit" class="btn btn-primary">
     </div>
   </div>
 <% end %>
