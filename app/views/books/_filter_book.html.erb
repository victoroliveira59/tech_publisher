<%= form_with url: books_path, method: :get, local: true do |f| %>
  <div>
    <%= f.label :filter_by, "Filtrar por:" %>

    <%= f.select :filter_by, options_for_select([['Selecione um filtro',''],['Title', 'title']], params[:filter_by]), {} %>
  </div>

  <div>
    <%= f.label :query, "Consulta" %>
    <%= f.text_field :query, value: params[:query] %>
  </div>

  <%= f.submit "Search" %>
<% end %>